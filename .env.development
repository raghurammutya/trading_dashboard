# trading_dashboard/.env.development
# Development environment - uses mock data by default
REACT_APP_USE_MOCK_DATA=true
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_ORGANIZATION_ID=default_org
NODE_ENV=development

# trading_dashboard/.env.production
# Production environment - uses real API
REACT_APP_USE_MOCK_DATA=false
REACT_APP_API_BASE_URL=http://ticker_service:8000
REACT_APP_ORGANIZATION_ID=default_org
NODE_ENV=production

# trading_dashboard/.env.local (for local testing with real API)
# Local environment with real API connection
REACT_APP_USE_MOCK_DATA=false
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_ORGANIZATION_ID=default_org