# Docker Environment Configuration for Trading Dashboard

# Application Configuration
REACT_APP_APP_NAME=TradingHub
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# API Endpoints (will be set by docker-compose)
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_USER_SERVICE_URL=http://user_service:8000
REACT_APP_TRADE_SERVICE_URL=http://trade_service:8001

# Data Source Configuration
REACT_APP_USE_MOCK_DATA=false

# Feature Flags
REACT_APP_ENABLE_SOCIAL_LOGIN=true
REACT_APP_ENABLE_MFA=true
REACT_APP_ENABLE_ANALYTICS=false

# OAuth Configuration (to be set in production)
REACT_APP_GOOGLE_CLIENT_ID=
REACT_APP_LINKEDIN_CLIENT_ID=
REACT_APP_FACEBOOK_APP_ID=
REACT_APP_GITHUB_CLIENT_ID=

# Security Configuration
REACT_APP_CSRF_PROTECTION=true
REACT_APP_SECURE_COOKIES=true